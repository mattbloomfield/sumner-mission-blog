{% extends "_layouts/generic-page-layout.twig" %}

{% block title %}{{ entry.title ~ ' - ' ~ siteName }}- {% endblock %}

{% block content %}
    <div class="space-y-16">
        <!-- Hero Section -->
        <section class="hero-section -m-8 md:-m-12 mb-16">
            <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                {% set heroImage = entry.hero.image.one() %}
                {% if heroImage %}
                    <div class="aspect-video md:aspect-[21/9]">
                        <img src="{{ heroImage.getUrl('large') }}"
                             alt="{{ heroImage.title ?? 'Mission hero image' }}"
                             class="w-full h-full object-cover"/>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                {% endif %}

                <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12 text-white">
                    {% if entry.hero.text %}
                        <h2 class="text-3xl md:text-5xl lg:text-6xl font-serif font-semibold mb-4 md:mb-6 leading-tight text-shadow-soft">
                            {{ entry.hero.text }}
                        </h2>
                    {% endif %}
                    {% if entry.hero.summary %}
                        <p class="text-lg md:text-xl lg:text-2xl text-white/90 max-w-4xl leading-relaxed">
                            {{ entry.hero.summary }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </section>

        <!-- Page Builder Components -->
        {% for component in entry.landingPageBuilder.all() %}
            {% switch component.type %}

            {% case "titleText" %}
                <section class="text-center space-y-6">
                    <div class="flex items-center justify-center mb-8">
                        <div class="h-px bg-gradient-to-r from-transparent via-coral-300 to-transparent flex-1"></div>
                        <div class="mx-6">
                            <svg class="w-8 h-8 text-coral-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        </div>
                        <div class="h-px bg-gradient-to-r from-coral-300 via-transparent to-transparent flex-1"></div>
                    </div>

                    <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-semibold text-ocean-800 leading-tight">
                        {{ component.title ?: "Welcome to Our Mission Journey" }}
                    </h2>

                    {% if component.summary %}
                        <div class="prose prose-lg md:prose-xl max-w-4xl mx-auto text-ocean-700 leading-relaxed">
                            {{ component.summary|nl2br }}
                        </div>
                    {% endif %}
                </section>

            {% case "recentPosts" %}
                <section class="space-y-8">
                    <div class="text-center">
                        <h2 class="text-3xl md:text-4xl font-serif font-semibold text-ocean-800 mb-4">
                            {{ component.title ?: "Recent Stories" }}
                        </h2>
                        <div class="w-24 h-1 bg-gradient-to-r from-coral-400 to-sand-400 mx-auto rounded-full"></div>
                    </div>

                    {% set posts = craft.entries.section('blog').limit(3).all() %}
                    {% if posts|length %}
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                            {% for post in posts %}
                                <article class="group bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
                                    {% set featuredImage = post.featuredImage.one() %}
                                    {% if featuredImage %}
                                        <div class="aspect-video overflow-hidden">
                                            <img src="{{ featuredImage.getUrl('medium') }}"
                                                 alt="{{ post.title }}"
                                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"/>
                                        </div>
                                    {% endif %}

                                    <div class="p-6 space-y-4">
                                        <div class="flex items-center justify-between text-sm text-ocean-600">
                                            <time datetime="{{ post.postDate|date('c') }}" class="font-medium">
                                                {{ post.postDate|date('M j, Y') }}
                                            </time>
                                            {% if post.categories.all()|length %}
                                                <span class="px-3 py-1 bg-sand-100 text-sand-700 rounded-full text-xs">
                                                        {{ post.categories.first().title }}
                                                    </span>
                                            {% endif %}
                                        </div>

                                        <h3 class="text-xl font-serif font-semibold text-ocean-800 group-hover:text-coral-600 transition-colors">
                                            <a href="{{ post.url }}" class="line-clamp-2">{{ post.title }}</a>
                                        </h3>

                                        {% if post.summary %}
                                            <p class="text-ocean-600 line-clamp-3 leading-relaxed">
                                                {{ post.summary }}
                                            </p>
                                        {% endif %}

                                        <a href="{{ post.url }}"
                                           class="inline-flex items-center text-coral-600 hover:text-coral-700 font-medium group/link">
                                            Read More
                                            <svg class="ml-2 w-4 h-4 transform group-hover/link:translate-x-1 transition-transform"
                                                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                            </svg>
                                        </a>
                                    </div>
                                </article>
                            {% endfor %}
                        </div>

                        <div class="text-center">
                            <a href="/blog"
                               class="inline-flex items-center px-8 py-3 bg-gradient-to-r from-ocean-500 to-ocean-600 text-white font-medium rounded-full hover:from-ocean-600 hover:to-ocean-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                                View All Stories
                                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                        </div>
                    {% endif %}
                </section>

            {% case "textCards" %}
                <section class="space-y-8">
                    {% if component.title %}
                        <div class="text-center">
                            <h2 class="text-3xl md:text-4xl font-serif font-semibold text-ocean-800 mb-4">
                                {{ component.title }}
                            </h2>
                            <div class="w-24 h-1 bg-gradient-to-r from-coral-400 to-sand-400 mx-auto rounded-full"></div>
                        </div>
                    {% endif %}

                    {% set textCards = component.textCardMatrix.all() %}
                    {% if textCards|length %}
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                            {% for card in textCards %}
                                <div class="bg-gradient-to-br from-sand-50 to-coral-50 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-sand-200 hover:border-coral-300 transform hover:-translate-y-1">
                                    <div class="text-center space-y-4">
                                        <div class="w-16 h-16 bg-gradient-to-br from-coral-400 to-sand-400 rounded-full mx-auto flex items-center justify-center">
                                            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                            </svg>
                                        </div>

                                        <h3 class="text-xl font-serif font-semibold text-ocean-800">
                                            {{ card.title }}
                                        </h3>

                                        {% if card.summary %}
                                            <p class="text-ocean-600 leading-relaxed">
                                                {{ card.summary }}
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </section>

            {% endswitch %}
        {% endfor %}

        <!-- Call to Action Section -->
        <section class="text-center py-16 px-8 bg-gradient-to-r from-ocean-500 via-ocean-600 to-ocean-500 rounded-3xl text-white relative overflow-hidden -mx-8 md:-mx-12">
            <div class="absolute inset-0 opacity-10">
                <svg viewBox="0 0 1200 120" class="w-full h-full">
                    <path fill="currentColor" d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z"></path>
                </svg>
            </div>

            <div class="relative z-10 max-w-4xl mx-auto space-y-6">
                <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif font-semibold leading-tight">
                    Join Us on This Journey
                </h2>
                <p class="text-xl md:text-2xl text-ocean-100 leading-relaxed">
                    Follow our mission adventures and be inspired by the beautiful work happening in paradise.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center pt-6">
                    <a href="/blog"
                       class="inline-flex items-center px-8 py-3 bg-white text-ocean-600 font-medium rounded-full hover:bg-ocean-50 transform hover:scale-105 transition-all duration-200 shadow-lg">
                        Read Our Stories
                    </a>
                    <a href="/contact"
                       class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-medium rounded-full hover:bg-white hover:text-ocean-600 transform hover:scale-105 transition-all duration-200">
                        Get In Touch
                    </a>
                </div>
            </div>
        </section>
    </div>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
{% endblock %}