{% extends "_layouts/generic-page-layout.twig" %}

{% block title %}{{ entry.title ~ ' - ' ~ siteName }}- {% endblock %}

{% block content %}
    <div class="space-y-16">
        <!-- Hero Section -->
        <section class="hero-section -m-8 md:-m-12 mb-16">
            <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                {% set heroImage = entry.hero.image.one() %}
                {% if heroImage %}
                    <div class="aspect-video md:aspect-[21/9]">
                        <img src="{{ heroImage.getUrl('large') }}"
                             alt="{{ heroImage.title ?? 'Mission hero image' }}"
                             class="w-full h-full object-cover"/>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>
                {% endif %}

                <div class="absolute bottom-0 left-0 right-0 p-8 md:p-12 text-white">
                    {% if entry.hero.text %}
                        <h2 class="text-3xl md:text-5xl lg:text-6xl font-serif font-semibold mb-4 md:mb-6 leading-tight text-shadow-soft">
                            {{ entry.hero.text }}
                        </h2>
                    {% endif %}
                    {% if entry.hero.summary %}
                        <p class="text-lg md:text-xl lg:text-2xl text-white/90 max-w-4xl leading-relaxed">
                            {{ entry.hero.summary }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </section>

        {% include '_pageBuilders/landingPage' with {
            components: entry.landingPageBuilder.all(),
        } %}
    </div>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
{% endblock %}