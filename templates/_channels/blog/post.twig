{% extends "_layouts/generic-page-layout.twig" %}

{% block title %}{{ entry.title ~ ' - ' ~ siteName }}- {% endblock %}

{% block content %}
    <div class="max-w-4xl mx-auto">
        <!-- Article Header -->
        <header class="text-center mb-12 space-y-6">
            <!-- Categories -->
            {% if entry.categories.all()|length %}
                <div class="flex flex-wrap justify-center gap-2 mb-4">
                    {% for category in entry.categories.all() %}
                        <span class="px-4 py-2 bg-gradient-to-r from-coral-100 to-sand-100 text-coral-700 rounded-full text-sm font-medium border border-coral-200">
                            {{ category.title }}
                        </span>
                    {% endfor %}
                </div>
            {% endif %}

            <!-- Title -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-semibold text-ocean-800 leading-tight">
                {{ entry.title }}
            </h1>

            <!-- Summary/Excerpt -->
            {% if entry.summary %}
                <p class="text-xl md:text-2xl text-ocean-600 leading-relaxed max-w-3xl mx-auto">
                    {{ entry.summary }}
                </p>
            {% endif %}

            <!-- Meta Information -->
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-8 text-ocean-600 pt-6 border-t border-sand-200">
                <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <time datetime="{{ entry.postDate|date('c') }}" class="font-medium">
                        {{ entry.postDate|date('F j, Y') }}
                    </time>
                </div>

{#                {% if entry.author %}#}
{#                    <div class="flex items-center space-x-2">#}
{#                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">#}
{#                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>#}
{#                        </svg>#}
{#                    </div>#}
{#                {% endif %}#}
            </div>
        </header>

        <!-- Featured Image -->
        {% set featuredImage = entry.featuredImage.one() %}
        {% if featuredImage %}
            <figure class="mb-12 -mx-8 md:-mx-12">
                <div class="aspect-video md:aspect-[21/9] rounded-3xl overflow-hidden shadow-2xl">
                    <img src="{{ featuredImage.getUrl('large') }}"
                         alt="{{ entry.title }}"
                         class="w-full h-full object-cover"/>
                </div>
                {% if featuredImage.title %}
                    <figcaption class="text-center text-ocean-600 mt-4 italic">
                        {{ featuredImage.title }}
                    </figcaption>
                {% endif %}
            </figure>
        {% endif %}

        {% include '_pageBuilders/articleBody' with {
            articleBody: entry.articleBody,
        } only %}

        {% include '_components/blocks/share-bar/share-bar' with {
            entry: entry,
        } only %}

        {% include '_components/blocks/related-posts/related-posts' with {
            entry: entry,
        } only %}

    </div>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
{% endblock %}