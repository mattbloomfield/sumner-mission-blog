<!-- Footer -->
<footer class="bg-gradient-to-r from-sand-800 via-coral-800 to-sand-800 text-white mt-20">
    <div class="container mx-auto px-6 py-12">
        <div class="text-center">
            <h3 class="text-2xl font-serif font-semibold mb-4">{{ siteName }}</h3>
            <p class="text-sand-200 mb-6 max-w-2xl mx-auto">
                {{ footer.text }}
            </p>
            <div class="flex justify-center space-x-6 mb-8">
                {% for item in craft.entries.section('navigation').all() %}
                    <a href="{{ item.linkAll.url }}" class="text-sand-200 hover:text-white transition-colors">
                        {{ item.linkAll.label }}
                    </a>
                {% endfor %}
            </div>
            <div class="border-t border-sand-600 pt-6">
                <p class="text-sand-300 text-sm">
                    &copy; {{ "now"|date('Y') }} {{ siteName }}. {{ footer.copyright }}
                </p>
            </div>
        </div>
    </div>
</footer>