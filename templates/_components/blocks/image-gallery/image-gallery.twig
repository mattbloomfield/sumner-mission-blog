{% set galleryColumns = columns ?? 3 %}
{% set enableLightbox = lightbox ?? true %}
{% set galleryId = 'gallery-' ~ random() %}
{% set showCaption = caption is defined and caption is not empty %}

<div class="my-12 space-y-8">

    {% if images %}
        <div class="grid gap-4
                    {% if galleryColumns == 2 %}grid-cols-1 md:grid-cols-2
                    {% elseif galleryColumns == 4 %}grid-cols-2 md:grid-cols-4
                    {% elseif galleryColumns == 5 %}grid-cols-2 md:grid-cols-3 lg:grid-cols-5
                    {% else %}grid-cols-1 md:grid-cols-2 lg:grid-cols-3{% endif %}"
             id="{{ galleryId }}">

            {% for image in images %}
                <div class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2 cursor-pointer gallery-item" data-index="{{ loop.index0 }}">
                    <div class="aspect-square overflow-hidden">
                        <img src="{{ image.getUrl('medium') }}"
                             data-img-full="{{ image.getUrl() }}"
                             alt="{{ image.title ?? 'Gallery image ' ~ loop.index }}"
                             loading="lazy"
                             class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />

                        <!-- Overlay -->
                        <div class="absolute inset-0 bg-gradient-to-t from-ocean-900/50 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center">
                            <div class="text-white transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                                {% if enableLightbox %}
                                    <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center border border-white/30">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"/>
                                        </svg>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if image.caption %}
                        <div class="p-4 bg-gradient-to-r from-sand-50 to-coral-50 border-t-2 border-coral-200">
                            <p class="text-ocean-700 font-medium text-center text-sm leading-relaxed" data-full-caption="{{ image.caption }}">
                                {{ image.caption|truncate(50) }}
                            </p>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        <!-- Lightbox Modal -->
        {% if enableLightbox %}
            <div id="{{ galleryId }}-lightbox" class="hidden fixed inset-0 bg-black/90 backdrop-blur-sm z-50 flex items-center justify-center p-4">
                <!-- Close button -->
                <button class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors z-10"
                        aria-label="Close lightbox">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>

                <!-- Previous button -->
                <button class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-gray-300 transition-colors p-2 hover:bg-white/10 rounded-full"
                        aria-label="Previous image">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </button>

                <!-- Image container -->
                <div class="max-w-4xl max-h-[80vh] flex flex-col items-center justify-center">
                    <img id="{{ galleryId }}-lightbox-img" src="" alt="" class="max-w-[90vw] max-h-[70vh] w-auto h-auto object-contain rounded-lg" />

                    <!-- Caption in lightbox -->
                    <div id="{{ galleryId }}-lightbox-caption" class="text-white text-center mt-4 text-sm"></div>

                    <!-- Image counter -->
                    <div class="text-white text-center mt-2 text-xs opacity-75">
                        <span id="{{ galleryId }}-current">1</span> / <span id="{{ galleryId }}-total">{{ images|length }}</span>
                    </div>
                </div>

                <!-- Next button -->
                <button class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-gray-300 transition-colors p-2 hover:bg-white/10 rounded-full"
                        aria-label="Next image">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </button>
            </div>
        {% endif %}
    {% else %}
        <div class="text-center py-16 px-8 bg-gradient-to-br from-sand-50 to-coral-50 rounded-2xl border-2 border-dashed border-sand-300">
            <div class="space-y-4">
                <div class="w-16 h-16 bg-sand-200 rounded-full mx-auto flex items-center justify-center">
                    <svg class="w-8 h-8 text-sand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <p class="text-sand-600 font-medium">No images available for this gallery.</p>
            </div>
        </div>
    {% endif %}
</div>

<script>
    // Enhanced gallery functionality with lightbox
    document.addEventListener('DOMContentLoaded', function() {
        const galleryId = '{{ galleryId }}';
        const galleryContainer = document.getElementById(galleryId);
        const lightboxContainer = document.getElementById(galleryId + '-lightbox');
        const enableLightbox = {{ enableLightbox ? 'true' : 'false' }};

        if (!galleryContainer) return;

        // Get all gallery items
        const galleryItems = Array.from(galleryContainer.querySelectorAll('.gallery-item'));
        const totalImages = galleryItems.length;
        let currentIndex = 0;

        // Lightbox elements
        const lightboxImg = document.getElementById(galleryId + '-lightbox-img');
        const lightboxCaption = document.getElementById(galleryId + '-lightbox-caption');
        const currentCounter = document.getElementById(galleryId + '-current');
        const closeBtn = lightboxContainer?.querySelector('button[aria-label="Close lightbox"]');
        const prevBtn = lightboxContainer?.querySelector('button[aria-label="Previous image"]');
        const nextBtn = lightboxContainer?.querySelector('button[aria-label="Next image"]');

        // Image data (extract from DOM)
        const imageData = galleryItems.map(item => {
            const img = item.querySelector('img');
            const captionEl = item.querySelector('p');

            // Convert medium URL to large URL by replacing 'medium' with 'large'
            let fullSrc = img.dataset.imgFull;
            if (fullSrc.includes('medium')) {
                fullSrc = fullSrc.replace('medium', 'large');
            } else if (fullSrc.includes('thumbnail')) {
                fullSrc = fullSrc.replace('thumbnail', 'large');
            }

            return {
                src: fullSrc,
                alt: img.alt,
                caption: captionEl ? captionEl.dataset.fullCaption : ''
            };
        });

        // Functions
        function openLightbox(index) {
            if (!enableLightbox || !lightboxContainer) return;

            currentIndex = index;
            updateLightbox();
            lightboxContainer.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            if (!lightboxContainer) return;
            lightboxContainer.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function updateLightbox() {
            if (currentIndex < 0) currentIndex = totalImages - 1;
            if (currentIndex >= totalImages) currentIndex = 0;

            const image = imageData[currentIndex];
            lightboxImg.src = image.src;
            lightboxImg.alt = image.alt;
            lightboxCaption.textContent = image.caption;
            currentCounter.textContent = currentIndex + 1;
        }

        function goToPrevious() {
            currentIndex--;
            updateLightbox();
        }

        function goToNext() {
            currentIndex++;
            updateLightbox();
        }

        // Event listeners for gallery items
        galleryItems.forEach((item, index) => {
            item.addEventListener('click', () => openLightbox(index));
        });

        // Event listeners for lightbox controls
        if (closeBtn) closeBtn.addEventListener('click', closeLightbox);
        if (prevBtn) prevBtn.addEventListener('click', goToPrevious);
        if (nextBtn) nextBtn.addEventListener('click', goToNext);

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (!lightboxContainer || lightboxContainer.classList.contains('hidden')) return;

            if (e.key === 'Escape') closeLightbox();
            if (e.key === 'ArrowLeft') goToPrevious();
            if (e.key === 'ArrowRight') goToNext();
        });

        // Close lightbox when clicking on dark background
        if (lightboxContainer) {
            lightboxContainer.addEventListener('click', function(e) {
                if (e.target === this) closeLightbox();
            });
        }

        // Original lazy loading functionality
        const lazyImages = galleryContainer.querySelectorAll('img[loading="lazy"]');
        lazyImages.forEach(img => {
            if (img.complete) {
                img.classList.add('loaded');
            } else {
                img.addEventListener('load', function() {
                    this.classList.add('loaded');
                    this.style.opacity = '1';
                });
            }
        });

        // Original intersection observer for fade-in animation
        const galleryObserver = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }, index * 100);
                }
            });
        }, {
            threshold: 0.1,
            rootMargin: '50px'
        });

        // Observe gallery items for animation
        galleryItems.forEach(item => {
            item.style.opacity = '0';
            item.style.transform = 'translateY(20px)';
            item.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            galleryObserver.observe(item);
        });
    });
</script>