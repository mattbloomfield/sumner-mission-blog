#!/bin/bash

# CraftCMS Deployment Script for Arcustech VPS
# Deploy code via SSH, run composer install, and database migrations

set -e  # Exit on any error

# Configuration - CUSTOMIZE THESE
REMOTE_HOST="66.220.24.250"
REMOTE_USER="root"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Helper functions
log() {
    echo -e "${GREEN}[DEPLOY]${NC} $1"
}

error() {
    echo -e "${RED}[ERROR]${NC} $1"
    exit 1
}

warn() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

# Validate configuration
validate_config() {
    if [ "$REMOTE_HOST" = "your-vps-ip" ] || [ "$REMOTE_USER" = "your-ssh-user" ]; then
        error "Please configure REMOTE_HOST, REMOTE_USER, and REMOTE_PATH at the top of this script"
    fi
}

# Check SSH connection
check_ssh() {
    log "Checking SSH connection to $REMOTE_USER@$REMOTE_HOST..."
    if ! ssh -o ConnectTimeout=5 "$REMOTE_USER@$REMOTE_HOST" "echo 'SSH connection successful'" > /dev/null 2>&1; then
        error "Cannot connect to $REMOTE_USER@$REMOTE_HOST. Check your SSH keys and connection settings."
    fi
    log "SSH connection successful"
}

# Main deployment
main() {
    log "Starting CraftCMS deployment..."

    validate_config
    check_ssh

    # Deploy code
    ssh "$REMOTE_USER@$REMOTE_HOST" "
        set -e
        cd /var/www/
        sh ./deploy.sh /var/www/sumnermission.org matt
    "

    log "ðŸŽ‰ Deployment successful!"
}

main "$@"